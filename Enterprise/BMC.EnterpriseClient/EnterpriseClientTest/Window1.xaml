<Window x:Class="EnterpriseClientTest.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BMC Enterprise Client Test" Height="300" Width="300"
    xmlns:local="clr-namespace:EnterpriseClientTest" MinWidth="300" MinHeight="300"
        Icon="pack://application:,,,/BallyIcon.ico" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <DataTemplate x:Key="ButtonTemp" DataType="{x:Type local:ParameterInfo}"  >
            <Button Width="120" Height="60" Content="{Binding Path=DisplayMember}"
                    IsEnabled="{Binding Path=IsEnabled}" Click="Button_Click" />
        </DataTemplate>
        <ItemsPanelTemplate x:Key="Container">
            <WrapPanel   Orientation="Horizontal" IsItemsHost="True" />
        </ItemsPanelTemplate>
    </Window.Resources>
    <Window.DataContext>
        <local:ParameterInfoCollection x:Name="DataCollection" />
    </Window.DataContext>
    <Grid Name="LayoutRoot">
        <ListBox Name="lstButtons" ItemsSource="{Binding}" 
                 ItemTemplate="{StaticResource ButtonTemp}"
                 ItemsPanel="{StaticResource Container}" ScrollViewer.HorizontalScrollBarVisibility="Disabled"></ListBox>
    </Grid>
</Window>
