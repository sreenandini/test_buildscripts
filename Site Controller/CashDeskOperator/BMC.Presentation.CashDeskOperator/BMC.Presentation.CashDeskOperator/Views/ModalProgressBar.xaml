<Window x:Class="BMC.Presentation.ModalProgressBar"
  xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BillsTicketCounter"    xmlns:System="clr-namespace:System;assembly=mscorlib"
    WindowStartupLocation="CenterScreen" ShowInTaskbar="False" 
         AllowsTransparency="True" WindowStyle="None" Background="{DynamicResource MainScreenBG}"
        Width="320" Height="62" KeyDown="Window_KeyDown" MouseDown="Window_MouseDown"> 
    <Grid>
        <ProgressBar x:Uid="pgBarMachineDrop" x:Name="pgBarMachineDrop" HorizontalAlignment="Center" VerticalAlignment="Center"   Minimum="0" Maximum="100" Height="20" Width="290" Loaded="pgBarMachineDrop_Loaded" IsIndeterminate="True" />
    </Grid>
</Window>
