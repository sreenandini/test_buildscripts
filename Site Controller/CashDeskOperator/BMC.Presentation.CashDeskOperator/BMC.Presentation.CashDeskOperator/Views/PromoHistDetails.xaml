        xmlns:CustomControl="clr-namespace:BMC.Presentation.POS.Helper_classes" 
        xmlns:Helper_classes="clr-namespace:BMC.Presentation.POS.Helper_classes" 
        xmlns:Custom="http://schemas.microsoft.com/wpf/2008/toolkit"
