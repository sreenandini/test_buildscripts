            <TextBlock x:Uid="txtPGStatus" FontFamily="Segoe UI" FontSize="14" x:Name="txtPGStatus" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10,0,0,20" Grid.Column="1" d:LayoutOverrides="GridBox"/>
